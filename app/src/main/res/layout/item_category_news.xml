<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center"
    style="@style/fab_action">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        app:cardCornerRadius="5dp"
        android:elevation="50dp"
        android:layout_margin="5dp"
        android:outlineAmbientShadowColor="@android:color/holo_blue_bright"
        android:outlineSpotShadowColor="@android:color/holo_blue_dark">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:orientation="vertical">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:src="@drawable/entertainment"
            android:scaleType="centerCrop"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:src="@drawable/gradient_transparent_white"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/text"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Entertainment"
                android:fontFamily="@font/roboto"
                android:textStyle="bold"
                android:textColor="#4B4B4B"
                android:layout_gravity="center"
                android:gravity="center"
                android:singleLine="true"
                android:textAlignment="center"
                android:textSize="14dp"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>